<h1>タスク一覧</h1>
<% if logged_in? %>
  <p>ログイン完了ユーザ：<%= current_user.name %></p>

  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %> : <%= task.content %> &gt; <%= task.status %></li>
    <% end %>  
  </ul>

  <ul>
    <li><%= link_to "新規タスクの作成", new_task_path %></li>
    <li><%= link_to "ログアウト", logout_path, method: :delete %></li>  
  </ul>
  

<% else %>
  <%= link_to "新規ユーザ登録", signup_path %>
  <%= link_to "ログイン", login_path %>
<% end %>  